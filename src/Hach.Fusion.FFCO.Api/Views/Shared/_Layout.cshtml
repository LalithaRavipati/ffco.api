@using System.Reflection
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    @{
        var assembly = typeof(WebApiApplication).Assembly;

        var titleAttribs = assembly.GetCustomAttributes(typeof(AssemblyTitleAttribute), false)
                .Cast<AssemblyTitleAttribute>();
        var titleAttrib = titleAttribs.FirstOrDefault();
        var title = titleAttrib == null ? string.Empty : titleAttrib.Title;

        var copyrightAttribs = assembly.GetCustomAttributes(typeof(AssemblyCopyrightAttribute), false)
                    .Cast<AssemblyCopyrightAttribute>();
        var copyrightAttrib = copyrightAttribs.FirstOrDefault();
        var copyright = copyrightAttrib?.Copyright;
    }
<div class="navbar navbar-inverse navbar-fixed-top">
    <img src="../../Resources/Small-Hach-logo.png" class="img-left"/>
    <div class="container" align="center">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink(@title, "Index", "Home", new {area = ""}, new {@class = "navbar-brand"})
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Home", "Index", "Home", new {area = ""}, null)</li>
                <li>@Html.ActionLink("Swagger", "", "Swagger", new {area = ""}, null)</li>
            </ul>
        </div>
    </div>
</div>
    <div class="container body-content">
        @RenderBody()
        <hr/>
        <footer>
            <p>@copyright</p>
        </footer>
    </div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)
</body>
</html>
